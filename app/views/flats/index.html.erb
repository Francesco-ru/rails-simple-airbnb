<div class='row'>
  <% @flats.each do |flat| %>
  <div class='col-4'>
    <div class='flat-card'>
      <div class='flat-card-image img' style="background-image: url('https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=1200')"></div>
      <div class='flat-card-content'>
        <div class='flat-card-title'>
          <h1><%= flat.name %></h1>
        </div>
        <h3><%= flat.address %></h3>
        <div class='flex price'>
          <div class='flex'>
            <h2><%= flat.price_per_night %></h2>
          </div>
          <div class='flex ml-3'>
            <h2><%= flat.number_of_guests %></h2>
          </div>
          </div>
          <div class='flat-card-actions'>
            <%= link_to 'More info',  flat_path(flat.id)%>
          </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
